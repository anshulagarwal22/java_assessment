<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.hibernateStudent.Student" table = "Student">
             
      <id name = "rollNo" type = "int" column = "rollNo">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "student_name" type = "string"/>
      <property name = "course" column = "course" type = "string"/>
      <property name = "fee" column = "fee" type = "float"/>
      
   </class>
</hibernate-mapping>

	